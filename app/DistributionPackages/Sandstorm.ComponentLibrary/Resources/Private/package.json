{
    "dependencies": {
        "@alpinejs/collapse": "^3.11.1",
        "@alpinejs/intersect": "^3.10.3",
        "@alpinejs/persist": "^3.13.5",
        "alpinejs": "^3.10.3",
        "date-fns": "^2.30.0",
        "swiper": "^10.2.0"
    },
    "scripts": {
        "watch": "concurrently \"yarn run watch:tailwind\" \"yarn run watch:js\" \"yarn run watch:typecheck\"",
        "watch:tailwind": "npx tailwindcss -i ./tailwind.css -o ../Public/tailwind.css --watch",
        "watch:js": "node ./build.mjs --watch",
        "build": "yarn run typecheck && yarn run build:tailwind && yarn run build:js",
        "build:tailwind": "npx tailwindcss -i ./tailwind.css -o ../Public/tailwind.css",
        "build:js": "node ./build.mjs",
        "typecheck": "tsc -noEmit",
        "watch:typecheck": "nodemon -e ts -x \"yarn run typecheck || echo '!!!!!!!!!!!!!!!!!!!!!! TypeScript Errors, Please fix !!!!!!!!!!!!!!!!!!!!!!'\"",
        "test": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "devDependencies": {
        "@types/alpinejs": "^3.7.0",
        "@vitest/coverage-v8": "^1.3.1",
        "autoprefixer": "^9.7.3",
        "concurrently": "^8.0.1",
        "esbuild": "^0.14.53",
        "jsdom": "^24.0.0",
        "nodemon": "^2.0.12",
        "prettier": "^2.4.0",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.0.2",
        "vitest": "^1.3.1"
    }
}
