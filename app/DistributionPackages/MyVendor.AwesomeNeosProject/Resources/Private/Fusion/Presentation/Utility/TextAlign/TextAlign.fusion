prototype(MyVendor.AwesomeNeosProject:Utility.TextAlign) < prototype(Neos.Fusion:Component) {
    textAlign = ''

    @propTypes {
        @strict = true
        textAlign = ${PropTypes.oneOf(['', 'left', 'center', 'right'])}
    }

    renderer = ${props.textAlign ? AtomicFusion.classNames({
        'text-left': props.textAlign == 'left',
        'text-center': props.textAlign == 'center',
        'text-right': props.textAlign == 'right'
    }) : ''}
}
