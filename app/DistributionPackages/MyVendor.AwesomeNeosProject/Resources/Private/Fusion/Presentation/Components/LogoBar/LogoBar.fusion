prototype(MyVendor.AwesomeNeosProject:Component.LogoBar) < prototype(Neos.Fusion:Component) {
    logos = ''
    amountOfLogos = '6'
    autoplayInterval = ''

    @propTypes {
        @strict = true
        logos = ${PropTypes.string}
        amountOfLogos = ${PropTypes.string}
        autoplayInterval = ${PropTypes.string}
    }

    @private.inBackend = MyVendor.AwesomeNeosProject:Helper.InBackend

    renderer = afx`
        <div
            class={AtomicFusion.classNames('logo-bar')}
            x-data={AlpineJS.xData('logoBar', props.amountOfLogos, props.autoplayInterval ? props.autoplayInterval : '0', private.inBackend)}
        >
            <div class={AtomicFusion.classNames('swiper', 'logo-bar__slider')} x-ref="slider">
                {props.logos}
            </div>
        </div>
    `
}
