prototype(MyVendor.AwesomeNeosProject:Component.Anchor) < prototype(Neos.Fusion:Component) {
    id = ''

    @propTypes {
        @strict = true
        id = ${PropTypes.string}
    }

    @private.inBackend = MyVendor.AwesomeNeosProject:Helper.InBackend

    renderer = afx`
        <div id={props.id} class={AtomicFusion.classNames('anchor', {'anchor--in-backend': private.inBackend})}>
            <div @if.inBackend={private.inBackend}>Anchor: {props.id}</div>
        </div>
    `
}
